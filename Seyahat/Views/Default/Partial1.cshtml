@using Seyahat.Models.Clasess
@model List<Blog>

<div class="con-bot">
    @foreach (var item in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@item.BlogImage"style="width:300px; height:175px;" alt="" />
            </div>
            <div class="left-text">
                <h4>@item.Baslik</h4>
                <span class="Tarih">@item.Tarih.ToString("MM.yyyy")</span>
                <p>@item.Aciklama.Substring(0,100)</p>
                <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Read More >></span></a></p>
            </div>
        </div>
    }
    @Html.Action("Partial2","Default")

    <div class="clear"></div>
</div>